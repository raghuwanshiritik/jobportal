    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="container shadow-lg w-100"style="margin-top:100px;">
        <div class="row">
            <div class="col-md-4">
             <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"class="w-100 kk">
            </div>
           
                <div class="col-md-8 col-lg-7 d-flex align-items-center">
                    <div class="card-body p-4 text-black">
                        <div class="d-flex align-items-center  pb-1">
                            <img src="https://mits-admission-portal.onrender.com/assets/images/logo.png" class="register_logo" width="120px" height="120px" alt="....">
                        </div>
    
                        <h5 class="text-center mb-3 pb-3 regs_heading">
                            Register Here</h5>
                            <% if(message1.length > 0){ %>
                                <div class="alert alert-danger">
                                    <%= message1 %>
                                </div>
                            <% } %>
                            <form action="/updatepassword
                            " method="post" enctype="multipart/form-data">   
                                <div class="form-group">
                                    <input type="password" placeholder="oldpassword" name="oldpassword" class="form-control mt-3">
                                </div>
                                <div class="form-group">
                                    <input type="password" placeholder="newpassword" name="newpassword" class="form-control mt-3">
                                </div>
                                <div class="form-group">
                                    <input type="password" placeholder="confirmpassword" name="confirmpassword" class="form-control mt-3">
                                </div>
                                 <!-- <input type="checkbox" onclick="myFunction()"><span>&nbsp;Show Password</span>  -->
                                 <div class="form-group my-2">
                                    <label class="form-label"style="font-size:20px;"> change Profile Picture</label>
                                    <input type="file" name="image" class="form-control" required="">
                                </div>  
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-info mt-3 form-control mb-3" style="background: #12587a; color: #ffff">
                                        Update</button>
                                    <span class=" text-center pt-3"style="font-size:20px;">HAVE AN ACCOUNT?
                                        <a style="color: #393f81;" href="/">LOGIN NOW</a>
                                    </span>
                                </div>
                            </form>
                </div>
            </div>
        </div><!--row-end-->
    </div><!--container-fluid-->
